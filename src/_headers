# Global security headers
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: same-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()
  Alt-Svc: h3=":443"; ma=86400, h2=":443"; ma=86400
  Strict-Transport-Security: max-age=31536000; includeSubDomains

# Main entry point - cache forever since it loads everything dynamically
/index.html
  Cache-Control: public, max-age=31536000, immutable
  Link: </profile.html>; rel=prefetch, </projects.html>; rel=prefetch, </blog.html>; rel=prefetch

# Dynamic content pages - short cache for updates
/profile.html
  Cache-Control: public, max-age=300, must-revalidate

/projects.html
  Cache-Control: public, max-age=300, must-revalidate

/blog.html
  Cache-Control: public, max-age=300, must-revalidate

# Blog posts - medium cache (content doesn't change after publish)
/blog/*/index.html
  Cache-Control: public, max-age=86400, must-revalidate

# Blog manifests - very short cache for new posts
/blog/manifests/*.json
  Cache-Control: public, max-age=60, must-revalidate

# Images - cache forever
/*.jpg
  Cache-Control: public, max-age=31536000, immutable
  Accept-CH: DPR, Width, Viewport-Width

# Icons - cache forever
/*.ico
  Cache-Control: public, max-age=31536000, immutable

# Service worker - no cache
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
